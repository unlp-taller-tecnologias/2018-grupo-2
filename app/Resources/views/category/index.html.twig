{% extends 'base.html.twig' %}

{% block title %} Categorías {% endblock %}

{% block stylesheets %}
  <link rel="stylesheet" type="text/css" href="{{ asset('scripts/dataTables/datatables.min.css') }}">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
{% endblock %}

{% block body %}
  <div class="container">
    <div class="row">
      <div class="col-md-12 col-center">
        <h1>Categorías</h1>
        <br>
        <a class="btn btn-info float-right btn-m-r" href="{{ path('category_new') }}">Nueva categoría</a>

          <table id="category-table" class="table row-border hover stripe" name="TABLA">
            <thead class="thead-dark">
              <tr>
                <th width="80%">Nombre</th>
                <th width="20%"></th>
              </tr>
            </thead>
            <tbody>
            {% for category in categories %}
              <tr>
                <td>{{ category.name }}</td>
                <td>
                  <a class="btn btn-success" href="{{ path('category_edit', { 'id': category.id }) }}">
                    <i class="fa fa-pencil"></i>
                  </a>
                  <a class="btn btn-danger" href="{{ path('category_delete', { 'id': category.id }) }}">
                    <i class="fa fa-trash"></i>
                  </a>
                </td>
              </tr>
            {% else %}
                <tr>
                    <td colspan="2" class="text-center">
                        <em>No category</em>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
            <tfoot>
            <tr>
                <td colspan="2" class="text-center">
                    {{ pagination(categories, 'page') }}
                </td>
            </tr>
            </tfoot>
        </table>

      </div>
    </div>
  </div>

{% endblock %}
{% block javascripts %}

<script src="{{ asset('scripts/dataTables/datatables.min.js') }}"></script>
<script>
  $(document).ready(function(){
    $('#category-table').DataTable({
      searching: false,
      info: false,
      lengthChange: false,
       "paging":   false,
       "ordering": false,
       "info":     false
    });
  });
</script>
{% endblock %}
