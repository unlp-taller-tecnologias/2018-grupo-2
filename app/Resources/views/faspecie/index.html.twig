{% extends 'base.html.twig' %}

{% block title %} Especies de Fauna {% endblock %}

{% block stylesheets %}
  <link rel="stylesheet" type="text/css" href="{{ asset('scripts/dataTables/datatables.min.css') }}">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
{% endblock %}

{% block body %}

  <div class="container">
    <div class="row">
      <div class="col-md-12 col-center">
        <br>
        <h1>Especies de Fauna</h1>
        <br>
        <a class="btn btn-info float-right btn-m-r" href="{{ path('faspecie_new') }}">Nueva especie</a>

        <table id="flsubspecie-table" class="table row-border hover stripe" >
          <thead class="thead-dark">
            <tr>
              <th width="70%">Nombre</th>
              <th width="30%">Acciones</th>
            </tr>
          </thead>
          <tbody>
          {% for fas in listFASpecie %}
              <tr>
                <td scope="row">{{ fas.name}}</td>
                <td>
                  <a class="btn btn-success" href="{{ path('faspecie_edit', { 'id': fas.id }) }}">
                    <i class="fa fa-pencil"></i>
                  </a>
                  <a class="btn btn-danger" href="{{ path('faspecie_delete', { 'id': fas.id }) }}">
                    <i class="fa fa-trash"></i>
                  </a>
                </td>
              </tr>
          {% else %}
              <tr>
                  <td colspan="3" class="text-center">
                      <em>No FASpecie</em>
                  </td>
              </tr>
          {% endfor %}
          </tbody>
          <tfoot>
          <tr>
              <td colspan="3" class="text-center">
                  {{ pagination(listFASpecie, 'page') }}
              </td>
          </tr>
          </tfoot>
          </tbody>
        </table>
      </div>
    </div>
  </div>

{% endblock %}
{% block javascripts %}

<script src="{{ asset('scripts/dataTables/datatables.min.js') }}"></script>
<script>
  $(document).ready(function(){
    $('#flsubspecie-table').DataTable({
      searching: false,
      info: false,
      lengthChange: false,
      columns: columnDefs,
       "paging":   false,
       "ordering": false,
       "info":     false
    });
  });
</script>
{% endblock %}
