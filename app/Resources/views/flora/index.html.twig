{% extends 'base.html.twig' %}

{% block title %} individuos flora {% endblock %}

{% block stylesheets %}
  <link rel="stylesheet" type="text/css" href="{{ asset('scripts/dataTables/datatables.min.css') }}">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
{% endblock %}

{% block body %}
<div class="container">
  <div class="row">
    <div class="col-md-12 col-center">
      <h1>Individuos Flora</h1>
      <br>
      <a class="btn btn-info float-right btn-m-r" href="{{ path('flora_new') }}">Nuevo individuo</a>
    <table id="flora-table" class="table row-border hover stripe" name="TABLA">
        <thead class="thead-dark">
            <tr>
                <th>Especie</th>
                <th>Subespecie</th>
                <th>Nombre</th>
                <th>Area</th>
                <th>Año plantación</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for flora in floras %}
            <tr>
                <td>{{flora.subspecie.specie.name}}</td>
                <td>{{ flora.subspecie.name }}</td>
                <td>{{ flora.name }}</td>
                <td>{{ flora.area.name }}</td>
                <td>{{ flora.age}}</td>
                <td>
                <a class="btn btn-info" href="{{ path('flora_show', { 'id': flora.id }) }}">
                  <i class="fa fa-eye"></i>
                </a>
                <a class="btn btn-success" href="{{ path('flora_edit', { 'id': flora.id }) }}">
                  <i class="fa fa-pencil"></i>
                </a>
                <a class="btn btn-danger" href="{{ path('flora_delete', { 'id': flora.id }) }}">
                  <i class="fa fa-trash"></i>
                </a>
                </td>
            {% else %}
                <tr>
                    <td colspan="6" class="text-center">
                        <em>No floras</em>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
            <tfoot>
            <tr>
                <td colspan="6" class="text-center">
                    {{ pagination(floras, 'page') }}
                </td>
            </tr>
            </tfoot>
        </tbody>
    </table>

    </div>
  </div>
</div>

{% endblock %}

{% block javascripts %}
<script src="{{ asset('scripts/dataTables/datatables.min.js') }}"></script>
<script>
  $(document).ready(function(){
    $('#flora-table').DataTable({
      searching: false,
      info: false,
      lengthChange: false,
       "paging":   false,
       "ordering": false,
       "info":     false
    });
  });
</script>
{% endblock %}
