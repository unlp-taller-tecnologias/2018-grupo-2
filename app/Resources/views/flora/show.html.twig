{% extends 'base.html.twig' %}

{% block body %}
    <h1>Flora</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ flora.id }}</td>
            </tr>
            <tr>
                <th>Observations</th>
                <td>{{ flora.observations }}</td>
            </tr>
            <tr>
                <th>Age</th>
                <td>{{ flora.plantationDate }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ flora.image }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ flora.name }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('flora_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('flora_edit', { 'id': flora.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
