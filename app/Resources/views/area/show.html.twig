{% extends 'base.html.twig' %}

{% block body %}
  <h1>Área</h1>

  <table>
    <tbody>
      <tr>
        <th>Nombre</th>
        <td>{{ area.name }}</td>
      </tr>
      <tr>
        <th>Polígono</th>
        <td>{{ area.polygon }}</td>
      </tr>
    </tbody>
  </table>

    <ul>
        <li>
            <a href="{{ path('area_index') }}">Volver al listado</a>
        </li>
        <li>
            <a href="{{ path('area_edit', { 'id': area.id }) }}">Editar</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Eliminar">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
