{% extends 'base.html.twig' %}

{% block title %} Áreas {% endblock %}

{% block stylesheets %}
  <link rel="stylesheet" type="text/css" href="{{ asset('scripts/dataTables/datatables.min.css') }}">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
{% endblock %}

{% block body %}
  <div class="container">
    <div class="row">
      <div class="col-md-10 col-center">
        <br>
        <h1>Áreas</h1>
        <br>
        <a class="btn btn-info float-right btn-m-r" href="{{ path('area_new') }}">Nueva área</a>

          <table id="area-table" class="row-border hover stripe">
            <thead>
              <tr>
                <th width="50%">Nombre</th>
                <th width="35%">Polígono</th>
                <th width="15%"></th>
              </tr>
            </thead>
            <tbody>
            {% for area in areas %}
              <tr>
                <td>{{ area.name }}</td>
                <td>{{ area.polygon }}</td>
                <td>
                  <a class="btn btn-success" href="{{ path('area_edit', { 'id': area.id }) }}">
                    <i class="fa fa-pencil"></i>
                  </a>
                  <input class="area_id" value="{{area.id}}" hidden>
                  <button type="button" class="button_delete btn btn-danger" data-toggle="modal" data-target="#delete_modal">
                    <i class="fa fa-trash"></i>
                  </button>
                </td>
              </tr>
            {% endfor %}
          </tbody>
        </table>

      </div>
    </div>
  </div>


  <div class="modal" id='delete_modal' tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Eliminar área</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <p>¿Estás seguro de que deseas eliminar ésta área?</p>
        </div>
        <div class="modal-footer">
          <form class="form_m_d" method="post">
            <button type="submit" class="btn btn-primary">Eliminar</button>
          </form>
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
{% block javascripts %}

<script src="{{ asset('scripts/dataTables/datatables.min.js') }}"></script>
<script>
  $(document).ready(function(){
    $('#area-table').DataTable({
      searching: false,
      info: false,
      lengthChange: false,
      language: {
        processing: "Procesando...",
        emptyTable: "No se han encontrado áreas",
        paginate: {
          first: "Inicio",
          last: "Fin",
          next: "Siguiente",
          previous: "Anterior"
        }
      }
    });
  });
</script>

<script>

$('#area-table').on("click", ".button_delete", function() {
  var id_area = $(this).closest('tr').find('.area_id').val();
  $('.form_m_d').attr('action', '/area/'+id_area);
  console.log(id_area);

});
</script>
{% endblock %}
