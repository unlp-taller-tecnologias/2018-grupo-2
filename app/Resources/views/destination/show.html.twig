{% extends 'base.html.twig' %}

{% block body %}
    <h1>Destination</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ destination.id }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ destination.location }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if destination.date %}{{ destination.date|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('destination_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('destination_edit', { 'id': destination.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
