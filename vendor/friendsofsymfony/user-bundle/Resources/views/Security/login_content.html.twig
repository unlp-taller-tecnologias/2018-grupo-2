{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
  <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
  {% if csrf_token %}
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
  {% endif %}

  <div class="row">
    <div class="col-md-6 col-center">
    <label for="username">{{ 'security.login.username'|trans }}</label>
    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="Ingrese el usuario" autocomplete="username" class="form-control"/>
  </div>
  </div>

  <div class="row">
    <div class="col-md-6 col-center mt-lg-3">
      <label for="password">{{ 'security.login.password'|trans }}</label>
      <input type="password" id="password" name="_password" required="required" autocomplete="current-password" placeholder="Ingrese la contraseÃ±a" class="form-control" />
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 col-center mt-lg-3" >
      <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
      <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 col-center mt-lg-3">
      <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" class="btn-block btn-info" />
    </div>
  </div>
</form>
